---
import { AstroFont } from "astro-font";
import { join } from "node:path";
import "../components/index.css";

const { title, description, url, image, jsonLD, robots } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={url} />

		<!-- Open Graph / Facebook -->
		<meta property="og:site_name" content="Luxe Studios" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={url} />
		<meta property="og:image" content={image} />
		<meta property="og:image:alt" content="Luxe Studios Wedding Photography" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="600" />

		<!-- Twitter Card -->
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:image" content={image} />
		<meta name="twitter:image:alt" content="Luxe Studios Wedding Photography" />

		<!-- Robots -->
		{robots && <meta name="robots" content="noindex, nofollow" />}

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/assets/final-logo.svg" />

		<!-- Fonts -->
		<AstroFont
		  config={[
		    {
		      name: "ClashDisplay",
		      src: [
		        { style: 'normal', weight: '400', path: join(process.cwd(), 'public', 'fonts', 'ClashDisplay-Regular.woff2') },
		        { style: 'medium', weight: '500', path: join(process.cwd(), 'public', 'fonts', 'ClashDisplay-Medium.woff2') },
		        { style: 'light', weight: '300', path: join(process.cwd(), 'public', 'fonts', 'ClashDisplay-Light.woff2') },
		        { style: 'semi-bold', weight: '600', path: join(process.cwd(), 'public', 'fonts', 'ClashDisplay-Semibold.woff2') },
		        { style: 'bold', weight: '700', path: join(process.cwd(), 'public', 'fonts', 'ClashDisplay-Bold.woff2') },
		      ],
		      preload: false,
		      display: "swap",
		      selector: "body",
		      fallback: "sans-serif",
		    },
		  ]}
		/>

		<!-- JSON-LD for SEO -->
		<Fragment set:html={jsonLD} />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
