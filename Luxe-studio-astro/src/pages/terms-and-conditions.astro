---
import TermsAndCondition from "../components/legal-page/TermsAndCondition";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer";
import Faq from "../components/home-page/Faq";
import ContactUsElement from "../components/home-page/ContactUs";
import siteData from "../data/siteData.json";
import jsonLDGenerator from "../js/jsonLD";

// SEO Metadata
const seoTitle = "Terms & Conditions - Luxe Studios";
const seoDescription = "Review Luxe Studios' terms and conditions, including service agreements, photography rights, and legal policies.";
const seoImage = "/assets/luxe-studios-banner.jpg"; // Update with an appropriate image if available
const seoURL = import.meta.env.SITE + "/terms-and-conditions";

// JSON-LD Structured Data for Terms & Conditions Page
const jsonLD = jsonLDGenerator({
  type: "WebPage",
  name: "Terms & Conditions - Luxe Studios",
  url: seoURL,
  description: seoDescription
});
---

<Layout title={seoTitle} description={seoDescription} image={seoImage} url={seoURL} jsonLD={jsonLD}>
  <Navbar client:load />
  <TermsAndCondition />
  <Faq client:idle />
  <ContactUsElement client:idle />
  <Footer />
</Layout>
