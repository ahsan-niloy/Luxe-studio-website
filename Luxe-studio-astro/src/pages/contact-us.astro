---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer";
import ContactUsElement from "../components/home-page/ContactUs";
import PhotoHeader from "../../src/components/PhotoHeader";
import BookCall from "../components/contact-us/BookCall";
import Faq from "../components/home-page/Faq";
import siteData from "../data/siteData.json";
import jsonLDGenerator from "../js/jsonLD";

// SEO Metadata
const seoTitle = "Contact Us - Luxe Studios | Book Your Photography Session";
const seoDescription = "Get in touch with Luxe Studios for premium wedding photography and videography. Schedule a consultation and start planning your special day.";
const seoImage = "/assets/luxe-studios-banner.jpg";
const seoURL = import.meta.env.SITE + "/contact-us";

// JSON-LD Structured Data for Contact Page
const jsonLD = jsonLDGenerator({
  type: "ContactPage",
  name: "Luxe Studios Contact Page",
  url: seoURL,
  description: seoDescription,
  contactPoint: {
    "@type": "ContactPoint",
    "telephone": "+1 123-456-7890",
    "contactType": "Customer Service",
    "areaServed": "Worldwide",
    "availableLanguage": ["English"]
  }
});
---

<Layout title={seoTitle} description={seoDescription} image={seoImage} url={seoURL} jsonLD={jsonLD}>
    <Navbar client:load />
    <PhotoHeader image="/assets/portfolio-cover-2.jpg">
        <h1 class="text-[2rem] leading-10 md:text-[5rem] md:bottom-6 text-white absolute bottom-0 px-[5vw] md:px-[10vw]">
            The magic starts here
        </h1>
    </PhotoHeader>
    <BookCall />
    <ContactUsElement client:idle/>
    <Faq client:idle/>
    <div class="h-[100px]"></div>
    <Footer />
</Layout>
